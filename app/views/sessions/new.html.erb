
<h1 id="sessionsHeader" class="sessions__header">Login</h1>

<%= render partial: '/errors' %>

<%= form_for @user, url: sessions_path, method: 'post', html: {class: 'sessions__form'} do |f| %>
    <%= f.label 'username', class: 'sessions__label' %>
    <%= f.text_field :username, class: 'sessions__input' %>
    <%= f.label 'password', class: 'sessions__label' %>
    <%= f.password_field :password, class: 'sessions__input' %>
    <%= f.submit 'Log In', class: 'sessions__button' %>
<% end %>
<p class="sessions__label">New?</p>
<%= link_to('Create an account', new_user_path, class: 'sessions__button sessions__button--anchor')%>
