<h1>Log in</h1>

<%= render partial: '/errors' %>

<%= form_for @user, url: sessions_path, method: 'post', html: {class: 'form'} do |f| %>
  <div class='form__field'>
    <%= f.label 'Username:', class: 'form__label' %>
    <%= f.text_field :username, class: 'form__input' %>
  </div>
  <div class='form__field'>
    <%= f.label 'Password:', class: 'form__label' %>
    <%= f.password_field :password, class: 'form__input' %>
  </div>
  <div class='form__field'>
    <%= f.submit 'login', class: 'form__submit' %>
  </div>
<% end %>
