<h1>Register</h1>

<%= render partial: '/errors' %>

<%= form_for @user, html: {class: 'form'} do |f| %>
  <%= f.label :Username %>
  <%= f.text_field :username %>
  <%= f.label :Email %>
  <%= f.email_field :email %>
  <%= f.label :User_Image %>
  <%= f.file_field :avatar %>
  <%= f.label :Password %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>
