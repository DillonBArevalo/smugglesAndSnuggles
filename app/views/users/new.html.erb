<h1>Register</h1>

<%= render partial: '/errors' %>

<%= form_for @user, html: {class: 'form'} do |f| %>
<div class='form__field'>
  <%= f.label 'Username:', class: 'form__label' %>
  <%= f.text_field 'username', class: 'form__input' %>
</div>
<div class='form__field'>
  <%= f.label 'Email:', class: 'form__label' %>
  <%= f.email_field 'email', class: 'form__input' %>
</div>
<div class='form__field'>
  <%= f.label 'User_Image:', class: 'form__label' %>
  <%= f.file_field 'avatar', class: 'form__upload' %>
</div>
<div class='form__field'>
  <%= f.label 'Password' , class: 'form__label'%>
  <%= f.password_field 'password', class: 'form__input' %>
</div>
<div class='form__field'>
  <%= f.submit :Register, class: 'form__submit' %>
</div>
<% end %>
